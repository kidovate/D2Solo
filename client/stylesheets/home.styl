#fullHomeBack
  height: 100%
  background-size: cover !important
  background-position: center center !important
  pointer-events: none;

#fullHomeBack:after
  box-shadow: inset 0 0 25em #000
  position: absolute
  top 0
  left 0
  width: 100%
  height: 100%
  z-index: 2
  content: ""

.titleContainer
  position:absolute
  top:100px
  left:0
  font-family:Quicksand
  font-weight:300
  max-height: 50%

.description-texts
  padding-top 50px
  text-align center
.site-slogan
  font-size: 50px;
  color #fff
  font-weight 300
  text-transform uppercase
  color #505050
.site-slogan span
  background: #fff
  background: rgba(255,255,255,.9)
  display: inline-block;
  line-height: 53px;
  margin-bottom: 10px;
  padding: 40px 30px;
  box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.24)

.app-description span
  color:white
  font-family: "Open Sans", sans-serif
  background: rgba(43,43,43,.9);
  display: inline-block;
  margin-bottom: 2px;
  padding: 10px 10px;
  box-shadow: 0 0 15px 0 rgba(0,0,0,0.48);
  font-size:14px;
.app-description span a
  color:white

